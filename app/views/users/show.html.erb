<div class="inside_container">
<h2>Showing User</h2>
  <div class="alert alert-success" role="alert">
    <%= notice%>
  </div>

  <%= render @user %>

  <div class="d-flex">



    <%= button_to "Edit this User", edit_user_path, method: :get, class: "btn btn-flat" %>
    <%= button_to "Delete",
        user_path(@user),
        method: :delete, form: {data: {turbo_confirm:  "Are you sure?"}},
        class: "btn btn-flat"%>
    <%= button_to "Back to Users", users_path, method: :get, class: "btn btn-flat" %>

  </div>
</div>
